
export EDITOR="nvim"


: "${XDG_DATA_DIR:=${HOME}/.config}"
: "${XDG_CACHE_DIR:=${HOME}/.cache}"
: "${XDG_BIN_DIR:=${HOME}/.local/bin}"

export XDG_DATA_DIR
export XDG_CACHE_DIR
export XDG_BIN_DIR

export GITHUB_USER=esio


# ------- Manpage
export MANPAGER="nvim +Man!"


# --- RIPGREP --- #
RG_DEFAULT_CONFIG_PATH="${HOME}/.ripgreprc"
[[ -s "$RG_DEFAULT_CONFIG_PATH" ]] \
  && export RIPGREP_CONFIG_PATH="$RG_DEFAULT_CONFIG_PATH"


# --- BAT --- #
