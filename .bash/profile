#         echo 'alias bd=". bd -si"' >> ~/.bashrc
#     fi 
# }

alias bd=". bd -si"
# See GitHub link for above alias for completion instructions
source ${HOME}/bin/bash_completion.d/bd         # Bash completion for 'bd' command


